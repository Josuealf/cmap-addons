<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>

        <!-- explicit form view definition -->
        <record model="ir.ui.view" id="oficio_recibido_form_view">
            <field name="name">oficio_recibido.form</field>
            <field name="model">cmap.oficio_recibido</field>
            <field name="arch" type="xml">
                <form string="Oficios Recibidos Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="id_id"/>
                                <field name="correlativo"/>
                                <field name="remitente_id"/>
                                <field name="asunto"/>
                                <field name="fecha"/>
                            </group>
                            <group>
                                <field name="fechahora_recibo"/>
                                <field name="archivo_img"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- explicit tree view definition -->
        <record model="ir.ui.view" id="oficio_recibido_tree_view">
            <field name="name">oficio_recibido.list</field>
            <field name="model">cmap.oficio_recibido</field>
            <field name="arch" type="xml">
                <tree string="Oficios Recibidos Tree">
                    <field name="id_id"/>
                    <field name="correlativo"/>
                    <field name="remitente_id"/>
                    <field name="asunto"/>
                    <field name="fecha"/>
                    <field name="fechahora_recibo"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="oficio_recibido_action_window">
            <field name="name">Oficios Recibidos</field>
            <field name="res_model">cmap.oficio_recibido</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- sub-menu categories -->
        <menuitem name="Recibidos" id="control_correspondencias_oficio_recibido" parent="control_correspondencias_oficios"
                  action="oficio_recibido_action_window"/>

    </data>
</odoo>